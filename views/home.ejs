<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <title>Weather App</title>
</head>
<body class="bg-dark">
    <h1 class="text-center mt-4 text-white">Weather App</h1>
    <form action="/" method="POST">
        <div class="form-group">
            <input type="text" name="cityName" class="form-control w-50 mx-auto" autofocus autocomplete="off" placeholder="Insert Country/City Name">
            <button type="submit" name="submit" class="btn btn-primary d-flex mx-auto mt-4 mb-4">Search</button>
        </div>
    </form>

    <div class="container">
        <div class="row">
            <% weather.forEach(function(data){ %>
                <div class="card bg-white text-dark p-3 w-25 mx-auto w-50 mb-3">
                    <div class="card-header bg-white">
                        <h3 class="text-center text-dark">City Name</h3><h4 class="text-center font-size-sm"><%= data.cityName %></h4>
                    </div>
                    <div class="card-body bg-white">
                        <h3 class="text-center text-dark">Temperature</h3><h4 class="text-center"><%= data.temperature %></h4>
                        <h3 class="text-center text-dark">Weather Status</h3><h4 class="text-center"><%= data.weather %></h4>
                    </div>
                    <div class="card-footer bg-white">
                        <img class="mx-auto d-flex rounded-circle bg-dark" src="<%= data.weatherIcon %>">
                    </div>
                </div>      
            <% }); %>
        </div>
      </div>    
</body>
</html>